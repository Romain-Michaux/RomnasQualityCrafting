$C = "../Common.ui";

$C.@PageOverlay {}

$C.@DecoratedContainer {
  Anchor: (Width: 900, Height: 600);

  #Title {
    Group {
      $C.@Title {
        @Text = %server.customUI.qualityViewerPage.title;
      }
    }
  }

  #Content {
    Group {
      FlexWeight: 1;
      LayoutMode: Left;
      Padding: (Full: 15);

      Group #ElementList {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Right: 15);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
      }

      $C.@Panel #TooltipPanel {
        Anchor: (Width: 320);
        LayoutMode: Top;
        Padding: (Full: 20);
        Visible: false;

        Group #Header {
          LayoutMode: Top;
          Padding: (Bottom: 15);

          Label #TooltipName {
            Style: (FontSize: 22, RenderBold: true, Alignment: Center);
            Text: "";
            Padding: (Bottom: 6);
          }

          Label #TooltipQuality {
            Style: (FontSize: 18, RenderBold: true, Alignment: Center);
            Text: "";
          }
        }

        Group {
          LayoutMode: Full;
          Anchor: (Height: 1);
          Background: #ffffff(0.2);
          Padding: (Bottom: 15);
        }

        Group #StatsSection {
          LayoutMode: Top;
          Padding: (Bottom: 15);

          Label {
            Style: (FontSize: 14, RenderBold: true, TextColor: #96a9be);
            Text: "Quality Stats";
            Padding: (Bottom: 8);
          }

          Label #TooltipStats {
            Style: (FontSize: 13, TextColor: #bfcdd5);
            Text: "";
            Padding: (Left: 8);
          }
        }

        Group {
          LayoutMode: Full;
          Anchor: (Height: 1);
          Background: #ffffff(0.2);
          Padding: (Bottom: 15);
        }

        Group #RunecraftingSection {
          LayoutMode: Top;
          FlexWeight: 1;

          Label {
            Style: (FontSize: 14, RenderBold: true, TextColor: #96a9be);
            Text: "Runecrafting";
            Padding: (Bottom: 8);
          }

          Group #RunecraftingContent {
            LayoutMode: Top;
            Padding: (Left: 8);
            FlexWeight: 1;

            Label #RunecraftingLine1 {
              Style: (FontSize: 13, TextColor: #bfcdd5);
              Text: "";
              Padding: (Bottom: 6);
            }

            Label #RunecraftingLine2 {
              Style: (FontSize: 13, TextColor: #96a9be);
              Text: "";
              Padding: (Bottom: 10);
            }

            $C.@TextButton #ApplyRuneButton {
              Anchor: (Width: 140);
              Text: "";
              Visible: false;
            }
          }
        }
      }
    }

    Group #Footer {
      LayoutMode: Left;
      Padding: (Full: 15, Top: 10);

      Group #CostInfo {
        FlexWeight: 1;
        LayoutMode: Top;

        Label {
          Style: (FontSize: 14, RenderBold: true, TextColor: #96a9be);
          Text: "Reforge Cost";
          Padding: (Bottom: 4);
        }

        Label #CostLabel {
          Style: (FontSize: 13, TextColor: #bfcdd5);
          Text: "";
        }

        Label #ResourceCount {
          Style: (FontSize: 12, TextColor: #ffffff(0.7));
          Text: "";
          Padding: (Top: 4);
        }
      }

      $C.@TextButton #ReforgeButton {
        Anchor: (Width: 150);
        Text: "Reforge";
      }
    }
  }
}

$C.@BackButton {}
